{
	"name": "@twin.org/api",
	"version": "0.0.1-next.24",
	"description": "API",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/api.git"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"private": true,
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dist": "node ./scripts/workspaces.mjs dist",
		"format": "prettier --config .prettierrc --write .",
		"lint:format": "prettier --config .prettierrc --check .",
		"lint:code": "eslint . --ext .js,.mjs,.ts",
		"lint:markdown": "markdownlint **/*.md --ignore **/node_modules/** --ignore **/docs/reference/**",
		"lint:spell": "cspell ** --no-progress",
		"lint": "npm run lint:format && npm run lint:code && npm run lint:markdown && npm run lint:spell"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "7.13.1",
		"cspell": "8.16.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-header": "3.1.1",
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-jsdoc": "50.5.0",
		"eslint-plugin-prettier": "5.2.1",
		"eslint-plugin-promise": "7.1.0",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-unicorn": "56.0.1",
		"eslint-plugin-unused-imports": "3.2.0",
		"fast-glob": "3.3.2",
		"markdownlint-cli": "0.42.0",
		"prettier": "3.3.3"
	},
	"workspaces": [
		"packages/api-models",
		"packages/api-core",
		"packages/api-processors",
		"packages/api-server-fastify",
		"packages/api-service",
		"packages/api-rest-client",
		"packages/api-auth-entity-storage-models",
		"packages/api-auth-entity-storage-service",
		"packages/api-auth-entity-storage-rest-client"
	],
	"type": "module"
}
